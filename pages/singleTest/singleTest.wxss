.single-test{
  position:fixed;
  top:0;
  width: 100%;
}
.container .van-tabs{
  box-shadow: -2px  0px  10px  2px rgba(0, 0, 0, 0.05);
}

.tab{
  /* position: absolute; */
  width: 100%;
  top: 0;
}

.scroll{
  height: 100%;
  width: 100%;
  margin: 0 auto;
}

.loading{
  position: absolute;
  display: flex;
  top:40%;
  right: 50%;
  justify-content: center;
  align-items: center;
}

.scroll-view-item{
  height: 85px;
  display: flex;
  margin-right: 10px;
  margin-left: 10px;
  background: #ffffff;
  border-radius: 10px;
  margin-bottom: 8px;
  margin-top: 8px;
  box-shadow: -2px  0px  10px  2px rgba(0, 0, 0, 0.05);
}

.year{
  width: 60px;
  height: 48px;
  margin: 20px 10px 0 15px;
  background: #E4DACE;
  text-align: center;
  justify-content: center;
  color: #515151;
  font-size: 16px;
  line-height: 48px;
  border-radius: 4px;
}

.content{
  width: 100%;
  margin: 10px 10px 0 10px;
}

.title{
  display: flex;
  width: 100%;
  height: 30px;
}

.subject{
  width: 50%;
  color:#CCBE97;
  font-size: 14px;
}

.test-from{
  width: 50%;
  display: flex;
  justify-content: flex-end;
  text-align: right;
  color: #bfbfbf;
  font-size: 14px;
  line-height: 25px;
}

.test-from-text{
  margin-left: 5px;
}

.popup{
  overflow-y: scroll;
  overflow-x: hidden;
}

.question{
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box; /*将对象作为弹性伸缩盒子模型显示。*/
  -webkit-line-clamp: 2; /*设置需要显示的行数*/
  -webkit-box-orient: vertical; /*设置伸缩盒子的子元素排列方式(从上到下垂直排列)*/
  color: #707070;
}

.slot{
  margin:40px 10px;
  display: flex;
}

.action-icon{
  background-color: #fff;
  height: 60x;
  width: 60px;
  padding: 5px 0;
  border-radius: 50%;
  text-align: center;
  align-items: center;
  box-shadow: -2px  0px  10px  2px rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease-in-out;
}
.left{
  position: absolute;
  left: 18px;
  bottom: 20px
}

.right{
  position: absolute;
  right: 18px;
  bottom: 20px
}